<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.duke.ece651.group4.risc.controller.cloak.ResearchCloakController">
    <children>
        <ImageView fitHeight="400.0" fitWidth="600.0">
            <image>
                <Image url="@../../pic/background1.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="356.0" fitWidth="470.0" layoutX="65.0" layoutY="22.0">
            <image>
                <Image url="@../../pic/move/back.png" />
            </image>
        </ImageView>

        <Text fx:id="alert" layoutX="116.0" layoutY="340.0" strokeType="OUTSIDE" strokeWidth="0.0" />
      <Text layoutX="150.0" layoutY="131.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text_css" text="Do you want to research cloak?" textAlignment="CENTER" />
      <Button fx:id="yes_btn" layoutX="175.0" layoutY="189.0" mnemonicParsing="false" onAction="#researchCloak" styleClass="transparent_btn">
         <graphic>
            <ImageView fitHeight="50.0" fitWidth="111.0" preserveRatio="true">
               <image>
                  <Image url="@../../pic/cloak/yes_btn.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <Button fx:id="no_btn" layoutX="339.0" layoutY="189.0" mnemonicParsing="false" onAction="#exit" styleClass="transparent_btn">
         <graphic>
            <ImageView fitHeight="49.0" fitWidth="111.0" preserveRatio="true">
               <image>
                  <Image url="@../../pic/cloak/no_btn.png" />
               </image>
            </ImageView>
         </graphic></Button>
    </children>

</AnchorPane>
